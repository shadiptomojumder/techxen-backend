{
  "name": "techxen-backend",
  "version": "1.0.0",
  "description": "TechXen Backend API using Express and MongoDB",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "pm2 start ecosystem.config.cjs --env production",
    "start:local": "node server.js",
    "stop": "pm2 stop techxen-backend",
    "restart": "pm2 restart techxen-backend",
    "reload": "pm2 reload techxen-backend",
    "logs": "pm2 logs techxen-backend",
    "lint": "eslint .",
    "postinstall": "pm2 install pm2-logrotate"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shadiptomojumder/techxen-backend.git"
  },
  "keywords": [
    "express",
    "mongodb",
    "backend",
    "api",
    "techxen"
  ],
  "author": "Shadipto mojumder <shadiptomojumder@gmail.com>",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "multer": "^1.4.5-lts.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  }
}
